@layout MainLayout
@page "/access-denied"

@inject NavigationManager _navigationManager

<Result
    Status="error"
    Title="Access Denied"
    SubTitle="Please check you are signing in as an authorized user. Please contact your administrator if you believe you should have access."
>
    <Extra>
        <Template>
            <Button Type="@ButtonType.Primary" OnClick="@SwitchUser">Switch User</Button>
            <Button OnClick="@SignOut">Signout</Button>
        </Template>
    </Extra>
</Result>

@code
{
    private void NavigateTo(string uri) => _navigationManager.NavigateTo(uri, true);

    private void SwitchUser() => NavigateTo("/switch-user");
    private void SignOut() => NavigateTo("/signout");
}
